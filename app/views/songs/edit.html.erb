
<div class="bg-white my-10 p-16">
  <h1 class="text-black-500 font-bold text-5xl capitalize mb-6">New Song</h1>

  <%= form_with model: @song, data: { turbo: false } do |form| %>
    <% if form.object.errors.any? %>
      <!--
        @TODO: Rewrite to use designed way of displaying errors.
      -->
      <div class="rounded-md bg-red-50 mb-6 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <!-- Heroicon name: solid/x-circle -->
            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">There were <%= form.object.errors.size %> errors with your submission</h3>
            <div class="mt-2 text-sm text-red-700">
              <ul role="list" class="list-disc pl-5 space-y-1">
                <% form.object.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>

    <% end %>

    <div class="space-y-6">
      <div class="text-black-500">
        <label for="title" class="block text-base font-bold">Title</label>
        <div class="mt-1">
          <%= form.text_field :title, 
              placeholder: "Song title",
              class: "shadow-sm focus:ring-yellow-500 focus:border-yellow-500 block w-full sm:text-s border-2 border-black-500 rounded", "aria-describedby" => "title-description"
          %>
        </div>
        <p class="mt-2 text-sm text-gray-500" id="title-description">The title of the song.</p>
      </div>

      <div class="text-black-500">
        <label for="description" class="block text-base font-bold">Description</label>
        <div class="mt-1">
          <%= form.text_area :description, 
              class: "shadow-sm focus:ring-yellow-500 focus:border-yellow-500 block w-full sm:text-s border-2 border-black-500 rounded" 
          %>
        </div>
      </div>

      <div class="text-black-500">
        <label for="description" class="block text-base font-bold">Content</label>
        <div class="mt-1">
          <%= form.rich_text_area :content, 
              class: "shadow-sm focus:ring-yellow-500 focus:border-yellow-500 block w-full sm:text-s border-2 border-black-500 rounded" 
          %>
        </div>
      </div>
      
      <div class="flex justify-center">
        <%= form.submit "Update song", 
            class: "mt-8 p-5 px-8 text-xl text-white bg-green-500 hover:text-yellow-200 font-semibold capitalize tracking-wide no-underline rounded-sm drop-shadow-green-opacity-100 active:drop-shadow-none transition-colors" 
        %>
      </div>
    </div>
  <% end %>
</div>
